{
    "permissions": {
        "allow": [
            "WebFetch(domain:github.com)",
            "Bash(mkdir:*)",
            "Bash(nox:*)",
            "Bash(uv sync:*)",
            "Bash(python:*)",
            "Bash(source:*)",
            "Bash(grep:*)",
            "Bash(sudo uv:*)",
            "Bash(find:*)",
            "Bash(sudo rm:*)",
            "Bash(uv venv:*)",
            "Bash(ls:*)",
            "Bash(rm:*)",
            "Bash(uv run nox:*)",
            "Bash(uv run ruff check:*)",
            "Bash(cp:*)",
            "Bash(uv run pytest:*)",
            "Bash(git add:*)",
            "Bash(chmod:*)",
            "Bash(touch:*)",
            "Bash(git commit:*)",
            "Bash(git pull:*)",
            "Bash(git push:*)",
            "Bash(git update-index:*)"
        ],
        "deny": []
    },
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Write|Edit|MultiEdit",
                "file_path": "**/*.py",
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/python_quality_check.sh ${file_path}",
                        "decision": "block"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": ".claude/hooks/python_final_quality_check.sh",
                        "decision": "block"
                    }
                ]
            }
        ],
        "SubagentStop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "/workspace/.claude/hooks/python_final_quality_check.sh",
                        "decision": "block"
                    }
                ]
            }
        ]
    }
}
